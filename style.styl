@import url('https://fonts.googleapis.com/css2?family=Padauk:wght@400;700&display=swap');

desktop()
    @media (min-width: 480px)
        {block}
mobile()
    @media (max-width: 479px)
        {block}

easeOutBack = cubic-bezier(0.34, 1.56, 0.64, 1)
easeOutQuad = cubic-bezier(0.5, 1, 0.89, 1)

*
  margin 0
  padding 0
  &:focus
    outline 0

  
*,
*::after,
*::before {
	box-sizing: border-box;
}

html, 
body 
  width 100%
  height 100%
  background-color white
  font-family: 'Padauk', sans-serif;

.logo
  display block
  position fixed
  left 120px
  top 80px
  width 292px
  height 211px
  background url("img/head@2x.png")
  background-size 292px 211px
  +mobile()
    // width 50%
    left 50%
    transform translateX(-50%)
    top 10%
  .logo.openKeyboard
    opacity 0



.album-list
  position: absolute;
  bottom: 100px;
  width 3200px
  // padding-top 400px
  // height 100%
  +mobile()
    transform scale(.6,.6)
    margin-left -624px
    bottom: 0px;

.album
  position relative
  display inline-block
  text-align center
  width 594px
  height 403px
  &.play
    z-index 99
  // margin 200px auto
  transition: .2s cubic-bezier(0.25, 1, 0.5, 1);
  +desktop()
    margin-right -120px
    &.play
      transform translateX(-10%)
      margin-right 0px
      margin-left 40px
  +mobile()
    margin-right -120px
    &.play
      transform translateX(-10%)
      margin-right -10px

  a.CTAspotify 
    text-decoration none
    display inline-block
    position relative
    top 470px
    text-align center
    color white
    background #000
    font-size 16px
    font-weight 700
    border none
    border-radius 50px
    padding 8px 24px
    opacity 0
    transition .3s easeOutQuad
    transform scale(1.2, 1.2) 
    z-index 5
    &:hover
      // background-color #484848
  &.play
    a.CTAspotify 
      transition-delay 2s
      opacity 1
      transform scale(1.2, 1.2) translateY(-40px)


  button.CTAspotify 
    display inline-block
    position relative
    top 470px
    text-align center
    color white
    background #000
    font-size 16px
    font-weight 700
    border none
    border-radius 50px
    padding 8px 24px
    opacity 0
    transition .3s easeOutQuad
    transform scale(1.2, 1.2) 
    z-index 5
    &:hover
      // background-color #484848
  &.play
    button.CTAspotify 
      transition-delay 2s
      opacity 1
      transform scale(1.2, 1.2) translateY(-40px)

  .cover-shadow
    left 0
    position absolute
    display inline-block
    width 594px
    height 403px
    background: url("img/cover-shadow.png")
    background-size: 594px 403px
    // z-index 5     // in front of album cover
    z-index 0     // behind of album cover

  .cover
    position absolute
    left: 19.6%
    top: 4.4%
    width 364px
    height 364px
    z-index 1

  .vinyl
    position absolute
    left 120px
    top 5.2%
    width 353px
    height 358px
    // background: url("img/vinyl.png")
    background-size: 353px 358px
    // animation-name: vinyl-rotate, vinyl-bump
    transition .2s    // off animation 
    img
      width 353px
      height 358px
      animation vinyl-rotate 10s linear infinite
      animation-play-state paused

// 

  &.play
    .vynil
      img
        animation-play-state running
      
    .vinyl
      transition .4s easeOutBack  // on animation
      // animation-play-state running
      left 300px

  .vinyl-shadow
    position absolute
    // left 0%
    left 30%
    opacity 0

    display inline-block
    width 594px
    height 403px
    background: url("img/vinyl-shadow.png")
    background-size: 594px 403px
    z-index -1
    transition: .2s linear;
  &.play
    .vinyl-shadow
      opacity 1
      // transform translateX(30%)
      // transition: .5s cubic-bezier(0.34, 1.56, 0.64, 1)

@keyframes vinyl-rotate {
  0% {transform: rotate(0deg)}
  100% {transform: rotate(360deg)}
}


