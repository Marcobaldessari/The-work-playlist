@import url('https://fonts.googleapis.com/css2?family=Padauk:wght@400;700&display=swap');

desktop()
    @media (min-width: 480px)
        {block}
mobile()
    @media (max-width: 479px)
        {block}

html, 
body 
  height 100%
  font-family: 'Padauk', sans-serif;

.album-list
  width 3000px
  margin-top 400px

.album
  position relative
  display inline-block
  text-align center
  width 594px
  height 403px
  // margin 200px auto
  transition: .2s cubic-bezier(0.25, 1, 0.5, 1);
  +desktop()
    margin-right -120px
    &.play
      transform translateX(-10%)
      margin-right -80px
  +mobile()
    margin-right -120px
    &.play
      transform translateX(-10%)
      margin-right -80px

  button.CTAspotify 
    display inline-block
    position relative
    top 430px
    text-align center
    color white
    background #000
    font-size 16px
    font-weight 700
    border 2px solid #000
    border-radius 50px
    padding 8px 24px
    opacity 0
    transition .2s linear 
  &.play
    button.CTAspotify 
      transition-delay 2s
      opacity 1
      transform translateY(-10px)

  .cover-shadow
    left 0
    position absolute
    display inline-block
    width 594px
    height 403px
    background: url("/img/cover-shadow.png")
    background-size: 594px 403px
    z-index 5

  .cover
    position absolute
    left: 19.6%
    top: 4.4%
    width 364px
    height 364px
    z-index 1

  .vinyl
    position absolute
    left 20%
    top 6%
    width 353px
    height 358px
    background: url("/img/vinyl.png")
    background-size: 353px 358px
    transition: .4s cubic-bezier(0.25, 1, 0.5, 1);
    animation: vinyl-rotate 10s linear infinite
    animation-play-state: paused;
  &.play
    .vinyl
      animation-play-state: running;
      left 50%
      transition: .5s cubic-bezier(0.34, 1.56, 0.64, 1)

  .vinyl-shadow
    position absolute
    // left 0%
    left 30%
    opacity 0

    display inline-block
    width 594px
    height 403px
    background: url("/img/vinyl-shadow.png")
    background-size: 594px 403px
    z-index -1
    transition: .2s linear;
  &.play
    .vinyl-shadow
      opacity 1
      // transform translateX(30%)
      // transition: .5s cubic-bezier(0.34, 1.56, 0.64, 1)

@keyframes vinyl-rotate {
  0% {transform: rotate(0deg)}
  100% {transform: rotate(360deg)}
}


