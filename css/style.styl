body 
  position  : absolute
  width 100%
  height 100%
  text-align center

.musicPlayer
  position relative
  display inline-block
  margin 40px auto
  color white
  padding 40px 120px
  background-color #6f6f6f

.album
  position relative
  width 594px
  height 403px
  margin 0 auto

  .cover-shadow
    left 0
    position absolute
    display inline-block
    width 594px
    height 403px
    background: url("/img/cover-shadow.png")
    background-size: 594px 403px
    z-index 5

  .cover
    position absolute
    left: 19.6%
    top: 4.4%

    width 364px
    height 364px
    background: url("/img/cover-1.jpg")
    background-size: 364px 364px
    z-index 1

  .vinyl
    position absolute
    left 50%
    top 6%
    width 353px
    height 358px
    background: url("./img/vinyl.png")
    background-size: 353px 358px

  &.play
    .vinyl
      animation: vinyl-rotate 10s linear infinite

  .vinyl-shadow
    position absolute
    left 30%
    display inline-block
    width 594px
    height 403px
    background: url("/img/vinyl-shadow.png")
    background-size: 594px 403px
    z-index -1


@keyframes vinyl-rotate {
  0% {transform: rotate(0deg)}
  100% {transform: rotate(360deg)}
}